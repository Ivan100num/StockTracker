
@model IEnumerable<StockTracker2.Models.Stocks>

@{
    ViewBag.Title = "Large Cap Global Companies";
}

<h2>Large Cap Global Companies</h2>
<p>Filtered by market cap, the table below shows companies with the biggest market value in the world.</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Symbol</th>
            <th>Company Name</th>
            <th>Country</th>
            <th>Market Cap (T USD)</th>
            <th>Price (USD)</th>
            <th>Change (%)</th>
            <th>P/E</th>
            <th>EPS</th>
            <th>EPS Growth (%)</th>
            <th>Div Yield (%)</th>
            <th>Sector</th>
            <th>Analyst Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Symbol</td>
                <td>@stock.CompanyName</td>
                <td>@stock.Country</td>
                <td>@stock.MarketCap</td>
                <td>@stock.Price</td>
                <td style="color: @(stock.ChangePercent >= 0 ? "green" : "red")">
                    @stock.ChangePercent.ToString("+#.##%;-#.##%")
                </td>
                <td>@(stock.P_E.HasValue ? stock.P_E.Value.ToString("F2") : "N/A")</td> <!-- P/E Ratio -->
                <td>@stock.EPS</td>
                <td>@stock.EPSGrowth%</td>
                <td>@stock.DivYield%</td>
                <td>@stock.Sector</td>
                <td>@stock.AnalystRating</td>
            </tr>
        }
    </tbody>
</table>
